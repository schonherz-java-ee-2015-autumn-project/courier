<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	 http://www.springframework.org/schema/jee 
	       http://www.springframework.org/schema/jee/spring-jee.xsd
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.1.xsd">


	<context:component-scan base-package="hu.schonherz.java.training.courier.web" />

	<import resource="classpath:spring-core.xml" />
	<import resource="classpath:spring-service.xml" />
	<import resource="classpath:spring-security.xml" />

	<jee:local-slsb id="UserService" jndi-name="hu.schonherz.service.UserServiceLocal"
		business-interface="hu.schonherz.java.training.courier.service.UserServiceLocal" />
		
	<jee:local-slsb id="cargoService" jndi-name="hu.schonherz.service.CargoServiceLocal" 
		business-interface="hu.schonherz.java.training.courier.service.CargoServiceLocal" />
	
	<jee:local-slsb id="logService" jndi-name="hu.schonherz.service.LogServiceLocal"
		business-interface="hu.schonherz.java.training.courier.service.LogServiceLocal" />

</beans>